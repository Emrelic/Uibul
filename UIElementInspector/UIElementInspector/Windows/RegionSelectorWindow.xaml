<Window x:Class="UIElementInspector.Windows.RegionSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Region Selector"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowState="Maximized"
        Cursor="Cross">

    <Grid>
        <!-- Semi-transparent overlay -->
        <Rectangle x:Name="OverlayRectangle"
                   Fill="Black"
                   Opacity="0.3"/>

        <!-- Selection rectangle -->
        <Canvas x:Name="SelectionCanvas">
            <Rectangle x:Name="SelectionRectangle"
                       Stroke="Red"
                       StrokeThickness="2"
                       StrokeDashArray="4,2"
                       Fill="LightBlue"
                       Opacity="0.2"
                       Visibility="Collapsed"/>
        </Canvas>

        <!-- Instructions -->
        <Border Background="Black"
                Opacity="0.8"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,50,0,0"
                CornerRadius="5"
                Padding="20,10">
            <StackPanel>
                <TextBlock Text="REGION SELECTOR"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Click and drag to select a region"
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
                <TextBlock Text="Press ESC to cancel"
                           Foreground="Gray"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Coordinates display -->
        <Border x:Name="CoordinatesDisplay"
                Background="Black"
                Opacity="0.8"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                CornerRadius="3"
                Padding="5"
                Visibility="Collapsed">
            <TextBlock x:Name="CoordinatesText"
                       Foreground="White"
                       FontSize="11"
                       FontFamily="Consolas"/>
        </Border>
    </Grid>
</Window>