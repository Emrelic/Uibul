<Window x:Class="UIElementInspector.Windows.FloatingControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inspector Controls"
        Height="140" Width="320"
        WindowStyle="ToolWindow"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#F0F0F0"
        BorderBrush="#0078D4"
        BorderThickness="2">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Status Header -->
        <Border Grid.Row="0" Background="#0078D4" Padding="8,4" Margin="-10,-10,-10,5" CornerRadius="0">
            <TextBlock Text="🔍 INSPECTION ACTIVE"
                      Foreground="White"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      FontSize="13"/>
        </Border>

        <!-- Mode & Status Info -->
        <StackPanel Grid.Row="1" Margin="0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Mode:" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock Grid.Column="1" Name="txtMode" Text="Hover (Real-time)" Foreground="#0078D4"/>
            </Grid>

            <Grid Margin="0,3,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Status:" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock Grid.Column="1" Name="txtStatus" Text="Waiting for input..." Foreground="Green"/>
            </Grid>

            <Grid Margin="0,3,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Elements:" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock Grid.Column="1" Name="txtElementCount" Text="0" Foreground="#555"/>
            </Grid>
        </StackPanel>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,5">
            <Button Name="btnStopInspection"
                    Click="StopInspection_Click"
                    Width="100"
                    Height="30"
                    Margin="0,0,10,0"
                    Background="#D13438"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⏹" FontSize="14" Margin="0,0,5,0"/>
                    <TextBlock Text="Stop (ESC)" VerticalAlignment="Center" FontSize="11"/>
                </StackPanel>
            </Button>

            <Button Name="btnShowMain"
                    Click="ShowMain_Click"
                    Width="100"
                    Height="30"
                    Background="#0078D4"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📋" FontSize="14" Margin="0,0,5,0"/>
                    <TextBlock Text="Show Results" VerticalAlignment="Center" FontSize="11"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Hint Text -->
        <TextBlock Grid.Row="3"
                   Text="💡 Press ESC to stop and show results"
                   FontSize="10"
                   Foreground="#666"
                   TextAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,5,0,0"/>
    </Grid>
</Window>
