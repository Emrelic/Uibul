<Window x:Class="UIElementInspector.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - UI Element Inspector"
        Width="600"
        Height="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Collection Profile Settings -->
                <GroupBox Header="Collection Profile">
                    <StackPanel>
                        <TextBlock Text="Select the default collection profile:" FontWeight="Bold"/>
                        <RadioButton x:Name="rbQuick" Content="Quick - Basic properties only (fastest)" GroupName="Profile"/>
                        <RadioButton x:Name="rbStandard" Content="Standard - Most commonly used properties" GroupName="Profile" IsChecked="True"/>
                        <RadioButton x:Name="rbFull" Content="Full - All available properties (slowest)" GroupName="Profile"/>
                        <RadioButton x:Name="rbCustom" Content="Custom - User-defined properties" GroupName="Profile" IsEnabled="False"/>
                    </StackPanel>
                </GroupBox>

                <!-- Export Settings -->
                <GroupBox Header="Export Settings">
                    <StackPanel>
                        <TextBlock Text="Default export formats:" FontWeight="Bold"/>
                        <CheckBox x:Name="chkExportCsv" Content="CSV (Element Properties)" IsChecked="True"/>
                        <CheckBox x:Name="chkExportJson" Content="JSON (Element Properties)" IsChecked="True"/>
                        <CheckBox x:Name="chkExportXml" Content="XML (Source Code)" IsChecked="True"/>
                        <CheckBox x:Name="chkExportHtml" Content="HTML (Source Code)" IsChecked="False"/>

                        <Separator Margin="0,10"/>

                        <TextBlock Text="Export directory:" FontWeight="Bold"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtExportPath" Grid.Column="0" Margin="5" Padding="5"/>
                            <Button x:Name="btnBrowse" Content="Browse..." Grid.Column="1" Width="80" Margin="5" Click="BrowseExportPath_Click"/>
                        </Grid>

                        <CheckBox x:Name="chkAutoExport" Content="Auto-export on capture" IsChecked="False"/>
                        <CheckBox x:Name="chkOrganizeByDate" Content="Organize exports by date" IsChecked="True"/>
                    </StackPanel>
                </GroupBox>

                <!-- Screenshot Settings -->
                <GroupBox Header="Screenshot Settings">
                    <StackPanel>
                        <TextBlock Text="Screenshot format:" FontWeight="Bold"/>
                        <ComboBox x:Name="cmbScreenshotFormat" Margin="5">
                            <ComboBoxItem Content="PNG (Recommended)" IsSelected="True"/>
                            <ComboBoxItem Content="JPEG"/>
                            <ComboBoxItem Content="BMP"/>
                        </ComboBox>

                        <TextBlock Text="JPEG Quality (%):" FontWeight="Bold"/>
                        <Slider x:Name="sliderJpegQuality" Minimum="50" Maximum="100" Value="90"
                                TickFrequency="10" IsSnapToTickEnabled="True" Margin="5"/>
                        <TextBlock Text="{Binding ElementName=sliderJpegQuality, Path=Value, StringFormat={}{0:F0}%}"
                                   HorizontalAlignment="Center"/>

                        <CheckBox x:Name="chkAutoScreenshot" Content="Automatically capture screenshots on element selection" IsChecked="True"/>
                        <CheckBox x:Name="chkIncludeTimestamp" Content="Include timestamp in screenshot filename" IsChecked="True"/>
                    </StackPanel>
                </GroupBox>

                <!-- Performance Settings -->
                <GroupBox Header="Performance Settings">
                    <StackPanel>
                        <TextBlock Text="Mouse hover delay (ms):" FontWeight="Bold"/>
                        <Slider x:Name="sliderHoverDelay" Minimum="100" Maximum="2000" Value="500"
                                TickFrequency="100" IsSnapToTickEnabled="True" Margin="5"/>
                        <TextBlock Text="{Binding ElementName=sliderHoverDelay, Path=Value, StringFormat={}{0:F0} ms}"
                                   HorizontalAlignment="Center"/>

                        <TextBlock Text="Max tree depth for full collection:" FontWeight="Bold"/>
                        <Slider x:Name="sliderMaxTreeDepth" Minimum="5" Maximum="50" Value="20"
                                TickFrequency="5" IsSnapToTickEnabled="True" Margin="5"/>
                        <TextBlock Text="{Binding ElementName=sliderMaxTreeDepth, Path=Value, StringFormat={}{0:F0} levels}"
                                   HorizontalAlignment="Center"/>

                        <CheckBox x:Name="chkEnableThrottling" Content="Enable detection throttling" IsChecked="True"/>
                        <CheckBox x:Name="chkCacheElements" Content="Cache detected elements" IsChecked="True"/>
                    </StackPanel>
                </GroupBox>

                <!-- Hotkey Settings -->
                <GroupBox Header="Hotkey Settings">
                    <StackPanel>
                        <TextBlock Text="Keyboard shortcuts:" FontWeight="Bold"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Start/Stop Inspection:"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Ctrl+Shift+I" FontWeight="Bold"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Capture Element:"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="Ctrl+Click" FontWeight="Bold"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Region Selection:"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="Ctrl+Shift+R" FontWeight="Bold"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Export All:"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="Ctrl+Shift+E" FontWeight="Bold"/>
                        </Grid>

                        <TextBlock Text="Note: Hotkey customization will be available in a future update."
                                   FontStyle="Italic" Foreground="Gray" Margin="5,10,5,5"/>
                    </StackPanel>
                </GroupBox>

                <!-- UI Settings -->
                <GroupBox Header="User Interface">
                    <StackPanel>
                        <CheckBox x:Name="chkAlwaysOnTop" Content="Keep window always on top" IsChecked="False"/>
                        <CheckBox x:Name="chkMinimizeToTray" Content="Minimize to system tray" IsChecked="False"/>
                        <CheckBox x:Name="chkShowNotifications" Content="Show notification messages" IsChecked="True"/>
                        <CheckBox x:Name="chkShowTooltips" Content="Show tooltips" IsChecked="True"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="1" Background="White" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnSave" Content="Save" Width="100" Margin="5" Click="Save_Click"
                        Background="#4CAF50" Foreground="White" FontWeight="Bold" Padding="10,5"/>
                <Button x:Name="btnCancel" Content="Cancel" Width="100" Margin="5" Click="Cancel_Click"
                        Padding="10,5"/>
                <Button x:Name="btnResetDefaults" Content="Reset to Defaults" Width="120" Margin="5" Click="ResetDefaults_Click"
                        Padding="10,5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
