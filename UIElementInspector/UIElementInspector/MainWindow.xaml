<Window x:Class="UIElementInspector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIElementInspector"
        mc:Ignorable="d"
        Title="UI Element Inspector"
        Height="700" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="42"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_New Session" Click="NewSession_Click"/>
                <Separator/>
                <MenuItem Header="_Export">
                    <MenuItem Header="Export as _CSV" Click="ExportCSV_Click"/>
                    <MenuItem Header="Export as _TXT" Click="ExportTXT_Click"/>
                    <MenuItem Header="Export as _JSON" Click="ExportJSON_Click"/>
                    <MenuItem Header="Export as _XML" Click="ExportXML_Click"/>
                    <MenuItem Header="Export as _HTML" Click="ExportHTML_Click"/>
                </MenuItem>
                <MenuItem Header="_Import Session" Click="ImportSession_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Copy Element Data" Click="CopyElementData_Click" InputGestureText="Ctrl+C"/>
                <MenuItem Header="Copy _All Elements" Click="CopyAllElements_Click" InputGestureText="Ctrl+Shift+C"/>
                <MenuItem Header="Copy _Screenshot" Click="CopyScreenshot_Click"/>
                <MenuItem Header="Copy Source _Code" Click="CopySourceCode_Click"/>
                <Separator/>
                <MenuItem Header="_Clear All" Click="ClearAll_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Raw View" IsCheckable="True" IsChecked="True" Click="RawView_Click"/>
                <MenuItem Header="_Tree View" IsCheckable="True" Click="TreeView_Click"/>
                <Separator/>
                <MenuItem Header="Show _Properties Panel" IsCheckable="True" IsChecked="True"/>
                <MenuItem Header="Show _Console" IsCheckable="True" IsChecked="True"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Screenshot Tool" Click="ScreenshotTool_Click"/>
                <MenuItem Header="_Region Selector" Click="RegionSelector_Click"/>
                <MenuItem Header="_Color Picker" Click="ColorPicker_Click"/>
                <Separator/>
                <MenuItem Header="_Settings" Click="Settings_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Documentation" Click="Documentation_Click"/>
                <MenuItem Header="_Keyboard Shortcuts" Click="KeyboardShortcuts_Click"/>
                <Separator/>
                <MenuItem Header="_About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar - Compact Design -->
        <Border Grid.Row="1" Background="#F0F0F0" BorderBrush="#CCC" BorderThickness="0,0,0,1">
            <Grid Margin="5,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- START / STOP BUTTONS -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Name="btnStartInspection" Click="StartInspection_Click"
                            Padding="12,6" Margin="2" Background="#1976D2" Foreground="White" FontSize="12" FontWeight="Bold">
                        <Button.ToolTip>
                            <StackPanel MaxWidth="300">
                                <TextBlock Text="🔍 BAŞLAT (F1)" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock TextWrapping="Wrap" Text="Element inceleme modunu başlatır. Bu pencere otomatik olarak gizlenir. Mouse ile element üzerine geldiğinizde bilgiler toplanır."/>
                                <TextBlock Text="Kısayol: F1" Margin="0,5,0,0" FontStyle="Italic" Foreground="#AAA"/>
                            </StackPanel>
                        </Button.ToolTip>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔍" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Text=" BAŞLAT" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Name="btnStartKeepVisible" Click="StartKeepVisible_Click"
                            Background="#388E3C" Foreground="White" Padding="12,6" Margin="2" FontSize="12" FontWeight="Bold">
                        <Button.ToolTip>
                            <StackPanel MaxWidth="300">
                                <TextBlock Text="▶ GÖRÜNÜR BAŞLAT (F3)" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock TextWrapping="Wrap" Text="Element inceleme modunu başlatır. Bu pencere görünür kalır, böylece anlık sonuçları görebilirsiniz."/>
                                <TextBlock Text="Kısayol: F3" Margin="0,5,0,0" FontStyle="Italic" Foreground="#AAA"/>
                            </StackPanel>
                        </Button.ToolTip>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="▶" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Text=" GÖRÜNÜR" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Name="btnStopInspection" Click="StopInspection_Click" IsEnabled="False"
                            Background="#D32F2F" Foreground="Black" Padding="12,6" Margin="2" FontSize="12" FontWeight="Bold">
                        <Button.ToolTip>
                            <StackPanel MaxWidth="300">
                                <TextBlock Text="⏹ DURDUR (F2)" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock TextWrapping="Wrap" Text="Element inceleme modunu durdurur. Pencere tekrar görünür hale gelir ve toplanan veriler korunur."/>
                                <TextBlock Text="Kısayol: F2" Margin="0,5,0,0" FontStyle="Italic" Foreground="#AAA"/>
                            </StackPanel>
                        </Button.ToolTip>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⏹" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Text=" DURDUR" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- MODE SELECTION - Labels Above (negative margin), ComboBoxes Aligned with Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0" VerticalAlignment="Center">
                    <!-- MODE -->
                    <Grid Margin="2,0" MinWidth="95">
                        <TextBlock Text="MODE" FontSize="9" Foreground="#1565C0" FontWeight="Bold" HorizontalAlignment="Center"
                                   VerticalAlignment="Top" Margin="0,-12,0,0"/>
                        <Border Background="#E3F2FD" CornerRadius="4" BorderBrush="#1976D2" BorderThickness="1" Padding="2" VerticalAlignment="Center">
                            <Border.ToolTip>
                                <StackPanel MaxWidth="300">
                                    <TextBlock Text="📋 İNCELEME MODU" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                                    <TextBlock TextWrapping="Wrap" Text="• Hover: Mouse üzerine gelince yakalar&#x0a;• Click: Tıklama ile yakalar&#x0a;• Region: Bölge seçerek yakalar&#x0a;• Window: Tüm pencereyi analiz eder"/>
                                </StackPanel>
                            </Border.ToolTip>
                            <ComboBox Name="cmbInspectionMode" SelectedIndex="1" FontSize="12" FontWeight="Bold"
                                      Padding="10,6" BorderThickness="0" Background="Transparent" HorizontalContentAlignment="Center">
                                <ComboBoxItem>Hover</ComboBoxItem>
                                <ComboBoxItem>Click</ComboBoxItem>
                                <ComboBoxItem>Region</ComboBoxItem>
                                <ComboBoxItem>Window</ComboBoxItem>
                            </ComboBox>
                        </Border>
                    </Grid>
                    <!-- PROFILE -->
                    <Grid Margin="2,0" MinWidth="95">
                        <TextBlock Text="PROFİL" FontSize="9" Foreground="#2E7D32" FontWeight="Bold" HorizontalAlignment="Center"
                                   VerticalAlignment="Top" Margin="0,-12,0,0"/>
                        <Border Background="#E8F5E9" CornerRadius="4" BorderBrush="#388E3C" BorderThickness="1" Padding="2" VerticalAlignment="Center">
                            <Border.ToolTip>
                                <StackPanel MaxWidth="300">
                                    <TextBlock Text="📊 VERİ PROFİLİ" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                                    <TextBlock TextWrapping="Wrap" Text="• Quick: Temel bilgiler (hızlı)&#x0a;• Standard: Orta detay seviyesi&#x0a;• Full: Tüm özellikler (yavaş ama kapsamlı)"/>
                                </StackPanel>
                            </Border.ToolTip>
                            <ComboBox Name="cmbCollectionProfile" SelectedIndex="2" FontSize="12" FontWeight="Bold"
                                      Padding="10,6" BorderThickness="0" Background="Transparent" HorizontalContentAlignment="Center">
                                <ComboBoxItem>Quick</ComboBoxItem>
                                <ComboBoxItem>Standard</ComboBoxItem>
                                <ComboBoxItem>Full</ComboBoxItem>
                            </ComboBox>
                        </Border>
                    </Grid>
                    <!-- TECH -->
                    <Grid Margin="2,0" MinWidth="95">
                        <TextBlock Text="TECH" FontSize="9" Foreground="#E65100" FontWeight="Bold" HorizontalAlignment="Center"
                                   VerticalAlignment="Top" Margin="0,-12,0,0"/>
                        <Border Background="#FFF3E0" CornerRadius="4" BorderBrush="#E65100" BorderThickness="1" Padding="2" VerticalAlignment="Center">
                            <Border.ToolTip>
                                <StackPanel MaxWidth="300">
                                    <TextBlock Text="⚙ TEKNOLOJİ" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                                    <TextBlock TextWrapping="Wrap" Text="• Auto: Otomatik seçim&#x0a;• UIA: UI Automation (Windows)&#x0a;• CDP: Chrome DevTools Protocol&#x0a;• MSHTML: Internet Explorer&#x0a;• All: Tüm teknolojiler (en kapsamlı)"/>
                                </StackPanel>
                            </Border.ToolTip>
                            <ComboBox Name="cmbDetectionTech" SelectedIndex="4" FontSize="12" FontWeight="Bold"
                                      Padding="10,6" BorderThickness="0" Background="Transparent" HorizontalContentAlignment="Center">
                                <ComboBoxItem>Auto</ComboBoxItem>
                                <ComboBoxItem>UIA</ComboBoxItem>
                                <ComboBoxItem>CDP</ComboBoxItem>
                                <ComboBoxItem>MSHTML</ComboBoxItem>
                                <ComboBoxItem>All</ComboBoxItem>
                            </ComboBox>
                        </Border>
                    </Grid>
                </StackPanel>

                <!-- ACTION BUTTONS - Same Size as Start/Stop -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Name="btnRefresh" Click="Refresh_Click"
                            Padding="12,6" Margin="2" Background="#0288D1" Foreground="White" FontSize="12" FontWeight="Bold">
                        <Button.ToolTip>
                            <StackPanel MaxWidth="300">
                                <TextBlock Text="🔄 YENİLE (F5)" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock TextWrapping="Wrap" Text="Seçili elementi yeniden analiz eder. Dinamik içeriklerde değişiklikleri güncellemek için kullanın."/>
                                <TextBlock Text="Kısayol: F5" Margin="0,5,0,0" FontStyle="Italic" Foreground="#AAA"/>
                            </StackPanel>
                        </Button.ToolTip>
                        <TextBlock Text="🔄 YENİLE" FontSize="12"/>
                    </Button>
                    <Button Name="btnScreenshot" Click="Screenshot_Click"
                            Padding="12,6" Margin="2" Background="#7B1FA2" Foreground="White" FontSize="12" FontWeight="Bold">
                        <Button.ToolTip>
                            <StackPanel MaxWidth="300">
                                <TextBlock Text="📷 EKRAN GÖRÜNTÜSü" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock TextWrapping="Wrap" Text="Seçili elementin ve tüm ekranın görüntüsünü yakalar. Masaüstüne kaydeder."/>
                            </StackPanel>
                        </Button.ToolTip>
                        <TextBlock Text="📷 GÖRÜNTÜ" FontSize="12"/>
                    </Button>
                    <Button Name="btnExportQuick" Click="ExportQuick_Click"
                            Padding="12,6" Margin="2" Background="#455A64" Foreground="White" FontSize="12" FontWeight="Bold">
                        <Button.ToolTip>
                            <StackPanel MaxWidth="300">
                                <TextBlock Text="💾 HIZLI KAYDET (Ctrl+S)" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock TextWrapping="Wrap" Text="Mevcut element bilgilerini hızlıca masaüstüne TXT dosyası olarak kaydeder."/>
                                <TextBlock Text="Kısayol: Ctrl+S" Margin="0,5,0,0" FontStyle="Italic" Foreground="#AAA"/>
                            </StackPanel>
                        </Button.ToolTip>
                        <TextBlock Text="💾 KAYDET" FontSize="12"/>
                    </Button>
                </StackPanel>

                <!-- TOPMOST - Far Right -->
                <ToggleButton Name="btnTopmost" Grid.Column="4" Click="Topmost_Click"
                              Padding="12,6" Margin="2" Background="#FF5722" Foreground="White" HorizontalAlignment="Right" FontSize="12" FontWeight="Bold">
                    <ToggleButton.ToolTip>
                        <StackPanel MaxWidth="300">
                            <TextBlock Text="📌 HER ZAMAN ÜSTTE" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock TextWrapping="Wrap" Text="Pencereyi her zaman diğer pencerelerin üstünde tutar. Aktifken yeşil, pasifken turuncu renk alır."/>
                        </StackPanel>
                    </ToggleButton.ToolTip>
                    <TextBlock Text="📌 ÜSTTE" FontSize="12" FontWeight="Bold"/>
                </ToggleButton>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="240"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Element Tree -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Tree Header -->
                    <Grid Grid.Row="0" Background="LightGray">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Elements" VerticalAlignment="Center" Margin="3" FontWeight="Bold" FontSize="11"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="+" Click="ExpandAll_Click" Margin="1" Padding="4,1" FontSize="10" ToolTip="Expand All"/>
                            <Button Content="-" Click="CollapseAll_Click" Margin="1" Padding="4,1" FontSize="10" ToolTip="Collapse All"/>
                        </StackPanel>
                    </Grid>

                    <!-- Tree View -->
                    <TreeView Name="tvElements" Grid.Row="1" FontSize="10"
                             SelectedItemChanged="TreeView_SelectedItemChanged"
                             MouseRightButtonUp="TreeView_MouseRightButtonUp">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ElementType}" FontWeight="Bold" Margin="0,0,3,0"/>
                                    <TextBlock Text="{Binding Name}" FontStyle="Italic" MaxWidth="100" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text=" [" Foreground="Gray"/>
                                    <TextBlock Text="{Binding AutomationId}" Foreground="Gray" MaxWidth="60" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="]" Foreground="Gray"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>

                    <!-- Search Box -->
                    <Grid Grid.Row="2" Margin="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Name="txtTreeSearch" Grid.Column="0" FontSize="10"
                                TextChanged="TreeSearch_TextChanged"
                                GotFocus="TreeSearch_GotFocus"
                                LostFocus="TreeSearch_LostFocus"
                                Text="Search..." Foreground="Gray"/>
                        <Button Grid.Column="1" Content="🔍" Click="TreeSearch_Click" Margin="2,0,0,0" Padding="4,1" FontSize="10"/>
                    </Grid>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Stretch" Background="Gray"/>

            <!-- Center Panel - Element Details -->
            <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Margin="3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Details Header -->
                    <Grid Grid.Row="0" Background="LightGray">
                        <TextBlock Text="Properties" VerticalAlignment="Center" Margin="3" FontWeight="Bold" FontSize="11"/>
                    </Grid>

                    <!-- Quick Actions Bar - Moved from right panel -->
                    <Border Grid.Row="1" Background="#E8E8E8" Padding="5,3">
                        <WrapPanel>
                            <Button Content="📋 Full Report" Click="CopyFullReport_Click" Margin="2" Padding="8,4"
                                    Background="#4CAF50" Foreground="White" FontSize="10" FontWeight="Bold"
                                    ToolTip="Copy Full Report (5 Tech)"/>
                            <Button Content="📄 Copy Element" Click="CopyCurrentElement_Click" Margin="2" Padding="8,4"
                                    Background="#2196F3" Foreground="White" FontSize="10"
                                    ToolTip="Copy Current Element Data"/>
                            <Button Content="📑 Copy All" Click="CopyAllElementsQuick_Click" Margin="2" Padding="8,4"
                                    Background="#FF9800" Foreground="White" FontSize="10"
                                    ToolTip="Copy All Collected Elements"/>
                            <Button Content="📷 Screenshot" Click="SaveScreenshot_Click" Margin="2" Padding="8,4"
                                    Background="#9C27B0" Foreground="White" FontSize="10"
                                    ToolTip="Save Screenshot"/>
                            <Button Content="💾 Export" Click="ExportToDesktop_Click" Margin="2" Padding="8,4"
                                    Background="#607D8B" Foreground="White" FontSize="10"
                                    ToolTip="Export to Desktop"/>
                            <Button Content="🗑 Clear" Click="ClearAllData_Click" Margin="2" Padding="8,4"
                                    Background="#F44336" Foreground="White" FontSize="10"
                                    ToolTip="Clear All Data"/>
                        </WrapPanel>
                    </Border>

                    <!-- Tab Control for Different Views -->
                    <TabControl Grid.Row="2">
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="12,6"/>
                                <Setter Property="Background" Value="#E0E0E0"/>
                                <Setter Property="BorderBrush" Value="#999"/>
                                <Setter Property="BorderThickness" Value="1,1,1,0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                        <Setter Property="Foreground" Value="#FF0000"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#BBDEFB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TabControl.Resources>
                        <!-- Raw Properties Tab -->
                        <TabItem Header="RAW PROPERTIES">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBox Name="txtRawProperties"
                                        IsReadOnly="True"
                                        FontFamily="Consolas"
                                        Background="#F5F5F5"
                                        TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </TabItem>

                        <!-- Categorized Properties Tab - ALL 5 TECHNOLOGIES -->
                        <TabItem Header="ALL PROPERTIES">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <!-- 1. BASIC / UNIVERSAL PROPERTIES -->
                                    <Expander Header="1. BASIC" IsExpanded="True" Background="#E3F2FD">
                                        <DataGrid Name="dgBasicProperties" AutoGenerateColumns="False" CanUserAddRows="False" MaxHeight="120" FontSize="10">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Property" Binding="{Binding Key}" Width="140"/>
                                                <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Expander>

                                    <!-- 2. UI AUTOMATION (UIA) PROPERTIES -->
                                    <Expander Header="2. UIA" Background="#E8F5E9">
                                        <StackPanel>
                                            <TextBlock Text="Basic" FontWeight="Bold" FontSize="9" Margin="3,3,0,1"/>
                                            <DataGrid Name="dgUIABasic" AutoGenerateColumns="False" CanUserAddRows="False" MaxHeight="80" FontSize="10">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Property" Binding="{Binding Key}" Width="140"/>
                                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                            <TextBlock Text="Patterns" FontWeight="Bold" FontSize="9" Margin="3,5,0,1"/>
                                            <DataGrid Name="dgUIAPatterns" AutoGenerateColumns="False" CanUserAddRows="False" MaxHeight="80" FontSize="10">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Property" Binding="{Binding Key}" Width="140"/>
                                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                            <TextBlock Text="Legacy" FontWeight="Bold" FontSize="9" Margin="3,5,0,1"/>
                                            <DataGrid Name="dgUIALegacy" AutoGenerateColumns="False" CanUserAddRows="False" MaxHeight="60" FontSize="10">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Property" Binding="{Binding Key}" Width="140"/>
                                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </StackPanel>
                                    </Expander>

                                    <!-- 3. WEBVIEW2 / CDP PROPERTIES -->
                                    <Expander Header="3. CDP/Web" Background="#FFF3E0">
                                        <StackPanel>
                                            <TextBlock Text="DOM" FontWeight="Bold" FontSize="9" Margin="3,3,0,1"/>
                                            <DataGrid Name="dgWebDOM" AutoGenerateColumns="False" CanUserAddRows="False" MaxHeight="80" FontSize="10">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Property" Binding="{Binding Key}" Width="140"/>
                                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                            <TextBlock Text="ARIA" FontWeight="Bold" FontSize="9" Margin="3,5,0,1"/>
                                            <DataGrid Name="dgWebARIA" AutoGenerateColumns="False" CanUserAddRows="False" MaxHeight="60" FontSize="10">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Property" Binding="{Binding Key}" Width="140"/>
                                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                            <TextBlock Text="Layout" FontWeight="Bold" FontSize="9" Margin="3,5,0,1"/>
                                            <DataGrid Name="dgWebLayout" AutoGenerateColumns="False" CanUserAddRows="False" MaxHeight="60" FontSize="10">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Property" Binding="{Binding Key}" Width="140"/>
                                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                            <TextBlock Text="CSS" FontWeight="Bold" FontSize="9" Margin="3,5,0,1"/>
                                            <DataGrid Name="dgWebCSS" AutoGenerateColumns="False" CanUserAddRows="False" MaxHeight="80" FontSize="10">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Property" Binding="{Binding Key}" Width="140"/>
                                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </StackPanel>
                                    </Expander>

                                    <!-- 4. MSHTML / IHTMLDocument PROPERTIES -->
                                    <Expander Header="4. MSHTML" Background="#FCE4EC">
                                        <StackPanel>
                                            <TextBlock Text="Element" FontWeight="Bold" FontSize="9" Margin="3,3,0,1"/>
                                            <DataGrid Name="dgMSHTMLElement" AutoGenerateColumns="False" CanUserAddRows="False" MaxHeight="80" FontSize="10">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Property" Binding="{Binding Key}" Width="140"/>
                                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                            <TextBlock Text="Document" FontWeight="Bold" FontSize="9" Margin="3,5,0,1"/>
                                            <DataGrid Name="dgMSHTMLDocument" AutoGenerateColumns="False" CanUserAddRows="False" MaxHeight="60" FontSize="10">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Property" Binding="{Binding Key}" Width="140"/>
                                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </StackPanel>
                                    </Expander>

                                    <!-- 5. WIN32 API / SPY++ PROPERTIES -->
                                    <Expander Header="5. Win32" Background="#F3E5F5">
                                        <StackPanel>
                                            <TextBlock Text="Handle" FontWeight="Bold" FontSize="9" Margin="3,3,0,1"/>
                                            <DataGrid Name="dgWin32Handle" AutoGenerateColumns="False" CanUserAddRows="False" MaxHeight="60" FontSize="10">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Property" Binding="{Binding Key}" Width="140"/>
                                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
